{
  "compilerOptions": {
    "target": "ES2019",
    "module": "esnext",
    "lib": ["ES2019"],
    "rootDir": "./src",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "noImplicitReturns": true,
    "noImplicitAny": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "experimentalDecorators": true,
    "emitDeclarationOnly": false
  },
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "node_modules",
    "app"
  ]
}
